#include <stdio.h>

#define TRUE 1
#define FALSE 0

int AreDigitsSortedNonDecreasing(int number) {
  if (number < 0) {
    number = -number;
  }
  
  if (number < 10) {
    return TRUE;
  }
  
  int last_digit = number % 10;
  number = number / 10;
  
  while (number > 0) {
    int current_digit = number % 10;
    
    if (current_digit > last_digit) {
      return FALSE;
    }
    
    last_digit = current_digit;
    number = number / 10;
  }
  
  return TRUE;
}

int main() {
  int input_number;
  
  printf("Enter number to check: ");
  scanf("%d", &input_number);
  
  int result = AreDigitsSortedNonDecreasing(input_number);
  
  if (result == TRUE) {
    printf("Number %d: digits are sorted in non-decreasing order\n", input_number);
  } else {
    printf("Number %d: digits are NOT sorted in non-decreasing order\n", input_number);
  }
  
  printf("\nCheck on examples:\n");
  
  int examples[] = {23, -673, 1111, 553322, 123456, -123};
  int number_of_examples = 6;
  
  for (int i = 0; i < number_of_examples; ++i) {
    int current_example = examples[i];
    int example_result = AreDigitsSortedNonDecreasing(current_example);
    
    if (example_result == TRUE) {
      printf("Number %d: digits are sorted in non-decreasing order\n", current_example);
    } else {
      printf("Number %d: digits are NOT sorted in non-decreasing order\n", current_example);
    }
  }
  
  return 0;
}
